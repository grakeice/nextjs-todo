{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"codegen": {
			"persistent": true,
			"cache": false
		},
		"dev": {
			"persistent": true,
			"cache": false,
			"with": ["codegen"],
			"dependsOn": ["backend#prisma:migrate:dev"]
		},
		"backend#prisma:migrate:dev": {
			"dependsOn": ["backend#start:db"],
			"cache": false
		},
		"backend#start:db": {
			"cache": false
		}
	}
}
